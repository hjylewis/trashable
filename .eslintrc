{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jest/globals": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended",
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "jest",
      "flowtype"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": [
          "error",
          { allow: ["warn", "error"] }
        ]
    }
}
